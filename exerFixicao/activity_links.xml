<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".links">

    <Button
        android:id="@+id/btnSom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#474747"
        android:fontFamily="sans-serif-black"
        android:text="Musica 1"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="80dp" />

    <Button
        android:id="@+id/btnSom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:backgroundTint="#474747"
        android:fontFamily="sans-serif-black"
        android:text="Musica 2"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/btnSom1"
        tools:layout_editor_absoluteX="80dp" />

    <Button
        android:id="@+id/btnSom3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:backgroundTint="#474747"
        android:fontFamily="sans-serif-black"
        android:text="Musica 3"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/btnSom2"
        tools:layout_editor_absoluteX="80dp" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#3F51B5"
        android:fontFamily="sans-serif-black"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSom3" />

</androidx.constraintlayout.widget.ConstraintLayout>